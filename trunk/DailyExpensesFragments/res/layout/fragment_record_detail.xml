<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="16dp"
    tools:context=".RecordDetailFragment" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/detail_categoryType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:entries="@array/dummy_categories" >
            </Spinner>

            <EditText
                android:id="@+id/detail_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Title"
                android:imeOptions="actionNext"
                android:singleLine="true" >
            </EditText>

            <EditText
                android:id="@+id/detail_description"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:hint="Description"
                android:imeOptions="actionNext" >
            </EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/detail_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="top"
                    android:hint="Amount"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal" >
                </EditText>
            </LinearLayout>

            <!-- Checkbox or Switch -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <include layout="@layout/fragment_record_detail_toggles" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/detail_periodType"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="top"
                    android:hint="Period Type"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal" >
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/record_edit_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:visibility="invisible" >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>